{
  "name": "the-curator-api",
  "version": "1.0.0",
  "description": "Backend API for The Curator virtual museum platform",
  "main": "dist/server.js",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "start": "node dist/server.js",
    "start:prod": "NODE_ENV=production node dist/server.js",
    "start:dev": "NODE_ENV=development node dist/server.js",
    "dev": "nodemon --exec ts-node src/server.ts",
    "build": "npm rebuild && tsc",
    "build:prod": "NODE_ENV=production tsc",
    "postinstall": "npm rebuild bcrypt --build-from-source",
    "build:render": "npm install --production=false && npm rebuild bcrypt --build-from-source && tsc",
    "deploy": "npm run build:prod && npm run start:prod",
    "test": "jest",
    "test:watch": "jest --watch",
    "seed": "ts-node src/db/seeds/run-seed.ts",
    "seed:prod": "NODE_ENV=production ts-node src/db/seeds/run-seed.ts",
    "seed:production": "NODE_ENV=production ts-node src/db/seeds/production-seed.ts",
    "setup-test": "./setup-test.sh",
    "setup-db": "echo 'MongoDB setup not required - using cloud/local MongoDB instance'",

    "test-auth": "node test-auth-api.js",
    "test-artworks": "node test-artwork-api.js",
    "test-met": "node test-met-api.js"
  },
  "keywords": [
    "api",
    "museum",
    "exhibition",
    "curator",
    "typescript",
    "express",
    "mongodb"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.5.0",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.20.0",
    "mongoose": "^7.5.0",
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/node": "^20.5.0",
    "typescript": "^5.1.6"
  },
  "devDependencies": {
    "@types/jest": "^29.5.4",
    "@types/supertest": "^2.0.12",
    "jest": "^29.6.2",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.test.ts"
    ]
  }
}
